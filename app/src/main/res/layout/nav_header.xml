<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@color/lightblue"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/robomonkey"
        android:id="@+id/navheaderlogo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Qoute"
        android:layout_below="@id/navheaderlogo"
        android:textSize="30sp"
        android:id="@+id/dailyqoute"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Relay On Reality"
        android:layout_below="@id/dailyqoute"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        />

</RelativeLayout>